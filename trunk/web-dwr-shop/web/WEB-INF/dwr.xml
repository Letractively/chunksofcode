<dwr>
    <allow>

        <!--#### CREATION ####-->

        <!-- Store class -->
        <create creator="new" javascript="Store">
            <param name="class" value="com.myapp.dwr.Store"/>
            <include method="getArticle"/>
            <include method="findArticles"/>
        </create>

        <!-- ShoppingBasket class -->
        <create creator="new" scope="session" javascript="ShoppingBasket">
            <param name="class" value="com.myapp.dwr.ShoppingBasket"/>
            <include method="buyArticle"/>
            <include method="getFormattedTotalPrice"/>
            <include method="getShoppingBasket"/>
        </create>


        <!--#### CONVERSION ####-->

        <!-- Article class -->
        <convert converter="bean" match="com.myapp.dwr.Article">
            <param name="include" value="id,name,description,formattedPrice"/>
        </convert>

        <!-- ShoppingBasket class -->
        <convert converter="bean" match="com.myapp.dwr.ShoppingBasket">
            <param name="include" value="simpleContents,formattedTotalPrice"/>
        </convert>

    </allow>
</dwr>
