


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout android:id="@+id/customdialog_header"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ImageView android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/todo" />

        <TextView android:id="@+id/customdialog_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/customdialog_header_text"
                android:textColor="#FFF" />

    </LinearLayout>

    <TextView android:id="@+id/customdialog_text"
            android:text="@+id/customdialog_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF" />

    <View android:id="@+id/customdialog_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
            
</LinearLayout>