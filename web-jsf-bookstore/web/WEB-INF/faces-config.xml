<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">





<!-- NAVIGATION RULES: ###################################### -->

    <navigation-rule>
        <description>Wenn man auf der BookList-Seite ist, dann kann man ein buch aussuchen und bearbeiten..</description>
        <display-name>pages/bookList</display-name>
        <from-view-id>/pages/bookList.jsp</from-view-id>
        <navigation-case>
            <from-outcome>book_edit</from-outcome>
            <to-view-id>/pages/bookEdit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <description>Nach dem Bearbeiten des Buches kommt man wieder auf die BuchListe zurueck..</description>
        <display-name>pages/bookEdit</display-name>
        <from-view-id>/pages/bookEdit.jsp</from-view-id>
        <navigation-case>
            <from-outcome>book_listall</from-outcome>
            <to-view-id>/pages/bookList.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>





<!-- MANAGED BEANS:  ######################################-->

    <managed-bean>
        <description>Das Buechlein, um das es sich dreht...</description>
        <managed-bean-name>bookBean</managed-bean-name>
        <managed-bean-class>com.myapp.jsf.bibliothek.Book</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <description>Die Liste. Eigentlich unnoetig, da man Buecher aus der DB laden kann, aber vielleicht nicht alle auf einmal...</description>
        <managed-bean-name>bookListBean</managed-bean-name>
        <managed-bean-class>com.myapp.jsf.bibliothek.BookList</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

</faces-config>
