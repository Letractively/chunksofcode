<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Minesweeper Browsergame using WingS framework.</display-name>

    <servlet>
        <servlet-name>HelloWingS</servlet-name>
        <servlet-class>org.wings.session.WingServlet</servlet-class>
        <init-param>
            <param-name>wings.mainclass</param-name>
            <!-- point here to your appliction entry class -->
            <param-value>com.myapp.mines.view.wings.WingsEntryPoint</param-value>
        </init-param>
        <init-param>
            <param-name>wings.client.debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>

    <!-- the DWR stuff is for the AJAX based features of wingS -->
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <display-name>DWR Servlet</display-name>
        <description>Direct Web Remoter Servlet</description>
        <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
        <init-param>
            <param-name>uk.ltd.getahead.dwr.CreatorManager</param-name>
            <param-value>org.wings.plaf.css.dwr.SessionCreatorManager</param-value>
            <description>Install a session local CreatorManager</description>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWingS</servlet-name>
        <url-pattern>/start/*</url-pattern>
    </servlet-mapping>

    <!-- DWR / AJAX service mapping -->
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>postgreSQL Datasource example</description>
        <res-ref-name>jdbc/postgres-andre1</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
</web-app>
