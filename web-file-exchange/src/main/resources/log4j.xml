<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <!-- Appender -->

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
<!--             <param name="ConversionPattern" value="[%-5p] %d{HH:mm:ss} %c (#%L): %n%m %n%n" /> -->
<!--             <param name="ConversionPattern" value="%-5p %d{yyyy-MM-dd HH:mm:ss} %-26.26c{1} - %M() - %m\n" /> -->
            <param name="ConversionPattern" value="%-5p %d{yyyy-MM-dd HH:mm:ss} %25.25C{1}.%-30.30M - %m\n" />
        </layout>
    </appender>

